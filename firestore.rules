rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated and matches the userId in the path
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match the users collection
    match /users/{userId} {
      // Allow user to read/write their own top-level profile doc (if you add one later)
      allow read, write: if isOwner(userId);

      // Match the files subcollection
      // Path: /users/{uid}/files/{fileId}
      match /files/{fileId} {
        allow read, write: if isOwner(userId);
      }

      // Match the settings subcollection (e.g. preferences)
      // Path: /users/{uid}/settings/{doc}
      match /settings/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}