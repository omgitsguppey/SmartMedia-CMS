rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Match /users/{userId}/{allPaths=**}
    match /users/{userId}/{allPaths=**} {
      // Strict: Only owner can write/delete
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Relaxed: Any auth user can read. 
      // (Required for Admin Dashboard to view images, as Storage Rules cannot 
      // read Firestore 'role' fields without Custom Claims)
      allow read: if request.auth != null;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}